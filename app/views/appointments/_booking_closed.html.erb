<div
  class="modal fade"
  id="bookingWindowModal"
  tabindex="-1"
  aria-labelledby="bookingWindowModalLabel"
  aria-hidden="true"
  data-controller="booking-modal"
>
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content shadow-lg border-0 rounded-4" style="min-height: 450px;">

      <div class="modal-header bg-warning bg-opacity-75 rounded-top-4 justify-content-center">
        <h5 class="modal-title fw-bold text-dark fs-3 text-center" id="bookingWindowModalLabel">
          ‚è≥ Booking Unavailable
        </h5>
      </div>

      <div
        class="modal-body bg-light rounded-bottom-4 d-flex flex-column align-items-center justify-content-center text-center"
        id="booking-data"
        style="max-height: 500px; overflow-y: auto;"
        data-booking-modal-target="bookingData"
        data-booking-windows='<%= @organization.booking_windows.map { |bw| { start: bw.start_time.strftime("%H:%M"), end: bw.end_time.strftime("%H:%M") } }.to_json %>'
      >
        <p
          id="booking-message"
          class="text-danger fw-semibold mb-4 fs-5"
          data-booking-modal-target="bookingMessage"
        >
          <!-- Message inserted by Stimulus -->
        </p>

        <ul
          id="booking-times-list"
          class="list-group list-group-flush fs-5 w-50"
          data-booking-modal-target="bookingTimesList"
        >
          <!-- Time slots inserted by Stimulus -->
        </ul>
      </div>

    </div>
  </div>
</div>
