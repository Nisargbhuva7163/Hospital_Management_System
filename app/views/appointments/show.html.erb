<div class="container mt-5">
  <!-- Token Display Box -->
  <div class="text-center mb-4">
    <div class="alert alert-success display-4 fw-bold py-4">
      🎫 Your Token Number: <%= @appointment.token_no %>
    </div>
  </div>

  <!-- Appointment Status Message (turbo target for live update) -->
  <div id="appointment-status-message" class="mb-4">
    <% if @appointment.completed? %>
      <div class="alert alert-success text-center fw-bold fs-4">
        ✅ Your appointment is completed.
      </div>
    <% elsif @appointment.skipped? %>
      <div class="alert alert-warning text-center fw-bold fs-4">
        ⚠️ Your appointment was skipped. Please contact the hospital.
      </div>
    <% else %>
      <div class="alert alert-info text-center fw-bold fs-4">
        🕒 Please wait. Your appointment is pending.
      </div>
    <% end %>
  </div>

  <!-- Appointment Details (Wrap with ID for Turbo update) -->
  <div id="appointment-details" class="row justify-content-center mb-5">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">🧑‍⚕️ Patient Details</h4>
        </div>
        <div class="card-body">
          <p><strong>Name:</strong> <%= @appointment.name %></p>
          <p><strong>Age:</strong> <%= @appointment.age %></p>
          <p><strong>Gender:</strong> <%= @appointment.gender %></p>
          <p><strong>Phone Number:</strong> <%= @appointment.phone_number %></p>
          <p><strong>Status:</strong> <%= @appointment.status.capitalize %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Organization Details (Wrap with ID for Turbo update) -->
  <div id="organization-info" class="row justify-content-center mb-4">
    <div class="col-md-8">
      <div class="card border-secondary shadow-sm">
        <div class="card-header bg-secondary text-white">
          <h5 class="mb-0">🏥 Organization Info</h5>
        </div>
        <div class="card-body">
          <p><strong>Name:</strong> <%= @organization.org_name %></p>
          <p><strong>Phone:</strong> <%= @organization.phone_number %></p>

          <!-- Doctor Status -->
          <hr>
          <h6>Doctor Status:</h6>
          <% if @organization.checked_in? %>
            <span class="badge bg-success fs-5">Doctor is available ✅</span>
          <% else %>
            <span class="badge bg-danger fs-5">Doctor is not available ❌</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Book Again Button -->
  <div class="text-center mt-4">
    <%= link_to "🔁 Book Another Appointment", new_organization_appointment_path(@organization), class: "btn btn-outline-primary" %>
  </div>
</div>

<h3 class="mt-5">🏥 Current Token Being Served at <%= @organization.org_name %>:</h3>

<!-- Current token section wrapped with ID for Turbo update -->
<div id="current-token">
  <p>
    <strong>Current Token:</strong>
    <%= @current_token_appointment&.token_no || "Waiting for first patient..." %>
  </p>
</div>

<!-- Turbo Streams subscription for appointment and organization updates -->
<%= turbo_stream_from "appointment_#{@appointment.id}_updates" %>
<%= turbo_stream_from "organization_#{@organization.id}_updates" %>
