<h2 class="mb-4">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "needs-validation" }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="alert alert-warning">
      Currently waiting confirmation for: <strong><%= resource.unconfirmed_email %></strong>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <small class="text-muted d-block mb-1">(leave blank if you don't want to change it)</small>
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <small class="text-muted"><%= @minimum_password_length %> characters minimum</small>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
  </div>

  <div class="mb-4">
    <%= f.label :current_password, class: "form-label" %>
    <small class="text-muted d-block mb-1">(we need your current password to confirm your changes)</small>
    <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
  </div>

  <h3 class="mb-3">Organization Details</h3>
  <%= f.fields_for :organization do |org_form| %>
    <div class="mb-3">
      <%= org_form.label :org_name, "Organization Name", class: "form-label" %>
      <%= org_form.text_field :org_name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= org_form.label :phone_number, "Phone Number", class: "form-label" %>
      <%= org_form.telephone_field :phone_number, class: "form-control" %>
    </div>

    <div class="mb-4">
      <%= org_form.label :address, "Address", class: "form-label" %>
      <%= org_form.text_field :address, class: "form-control" %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.submit "Update", class: "btn btn-primary w-100" %>
  </div>
<% end %>

<hr class="my-4">

<h3>Cancel my account</h3>
<div class="mb-3">
  <p>Unhappy?</p>
  <%= button_to "Cancel my account", registration_path(resource_name),
                data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
                method: :delete, class: "btn btn-outline-danger" %>
</div>

<%= link_to "Back", root_path, class: "btn btn-secondary" %>
