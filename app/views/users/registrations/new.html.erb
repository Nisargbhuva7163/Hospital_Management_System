<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :Email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :Password %>
    <%# Devise recommends a minimum of 6 characters %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :Password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <h3>Organization Details</h3>
  <%= f.fields_for :organization do |org_form| %>
    <div class="field">
      <%= org_form.label :Org_Name, "Organization Name" %><br />
      <%= org_form.text_field :org_name %>
    </div>

    <div class="field">
      <%= org_form.label :Phone_Number, "Phone Number" %><br />
      <%= org_form.telephone_field :phone_number %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>