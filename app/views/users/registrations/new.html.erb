<h2 class="mb-4 text-center">Sign up</h2>

<div class="container d-flex justify-content-center">
  <div class="card shadow-sm p-4" style="max-width: 480px; width: 100%;">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation" }) do |f| %>
      <%= devise_error_messages! %>

      <div class="mb-3">
        <%= f.label :Email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
      </div>

      <div class="mb-3">
        <%= f.label :Password, class: "form-label" %>
        <small class="text-muted d-block mb-1">Devise recommends a minimum of 6 characters</small>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <h3 class="mb-3">Organization Details</h3>
      <%= f.fields_for :organization do |org_form| %>
        <div class="mb-3">
          <%= org_form.label :Org_name, "Organization Name", class: "form-label" %>
          <%= org_form.text_field :org_name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= org_form.label :Phone_number, "Phone Number", class: "form-label" %>
          <%= org_form.telephone_field :phone_number, class: "form-control" %>
        </div>

        <div class="mb-4">
          <%= org_form.label :Address, "Address", class: "form-label" %>
          <%= org_form.text_field :address, class: "form-control" %>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.submit "Sign up", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "users/shared/links" %>
