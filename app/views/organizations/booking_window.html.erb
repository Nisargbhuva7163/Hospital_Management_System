<h2 class="my-4">Set Booking Window</h2>

<%= form_with model: @organization, url: organization_path(@organization), method: :patch, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :booking_start_time, "Booking Start Time", class: "form-label" %>
    <%= form.time_field :booking_start_time, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :booking_end_time, "Booking End Time", class: "form-label" %>
    <%= form.time_field :booking_end_time, class: "form-control", required: true %>
  </div>

  <%= form.submit "Save Booking Window", class: "btn btn-primary" %>
<% end %>
