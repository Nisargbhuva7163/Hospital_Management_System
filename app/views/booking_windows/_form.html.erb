<%= form_with(model: [@organization, booking_window], local: true, class: "w-100") do |f| %>
  <div class="container mt-4">
    <div class="card shadow-sm rounded-4">
      <div class="card-header bg-primary text-white rounded-top-4">
        <h5 class="mb-0">ðŸ•’ Add Booking Window</h5>
      </div>
      <div class="card-body">
        <% if booking_window.errors.any? %>
          <div class="alert alert-danger rounded-3">
            <h5><%= pluralize(booking_window.errors.count, "error") %> prohibited this booking window from being saved:</h5>
