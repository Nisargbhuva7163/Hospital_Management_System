<%= stylesheet_link_tag "organizations/booking_window", media: "all", "data-turbo-track": "reload" %>

<div class="container mt-5">
  <div class="card shadow-sm rounded-4">
    <div class="card-header bg-primary text-white rounded-top-4">
      <h4 class="mb-0">🗓 Booking Windows for <%= @organization.org_name %></h4>
    </div>
    <div class="card-body">
      <% if @booking_windows.any? %>
        <div class="row g-3">
          <% @booking_windows.each do |window| %>
            <div class="col-md-6 col-lg-4">
              <div class="card border rounded-3 shadow-sm">
                <div class="card-body">
                  <h6 class="card-title">🕐 <%= window.start_time.strftime("%H:%M") %> - <%= window.end_time.strftime("%H:%M") %></h6>
                  <%= button_to "🗑 Delete", organization_booking_window_path(@organization, window),
                                method: :delete,
                                data: { confirm: "Are you sure you want to delete this booking window?" },
                                class: "btn btn-danger btn-sm mt-2" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="alert alert-info rounded-3">No booking windows available.</div>
      <% end %>

      <div class="mt-4">
        <%= link_to "← Back to Organization", organization_path(@organization), class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
