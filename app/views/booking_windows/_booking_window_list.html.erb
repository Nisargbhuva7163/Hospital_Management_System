<%= stylesheet_link_tag "organizations/booking_window", media: "all", "data-turbo-track": "reload" %>

<h2>Booking Windows for <%= @organization.org_name %></h2>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @booking_windows.each do |window| %>
    <tr>
      <td><%= window.start_time.strftime("%H:%M") %></td>
      <td><%= window.end_time.strftime("%H:%M") %></td>
      <td>
        <%= button_to "Delete", organization_booking_window_path(@organization, window),
                      method: :delete,
                      data: { confirm: "Are you sure?" },
                      class: "btn btn-sm btn-danger" %>

      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="mt-3">
  <%= link_to "← Back to Organizations", organization_path(id: @organization.id), class: "btn btn-secondary mb-3" %>
</div>